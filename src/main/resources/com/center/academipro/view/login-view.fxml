<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.center.academipro.controller.LoginController">
    <ImageView fitWidth="600.0" fitHeight="400.0" layoutX="0.0" layoutY="0.0"
               pickOnBounds="true" preserveRatio="false">
        <image>
            <Image url="@../images/background.png" />
        </image>
    </ImageView>
    <children>
        <ImageView fitHeight="251.0" fitWidth="238.0" layoutX="181.0" layoutY="-48.0" pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@../images/logo_remove.png" />
            </image></ImageView>
        <Label layoutX="170.0" layoutY="124.0" text="Welcome to AcademiPro" textFill="#3692b4">
            <font>
                <Font name="System Bold" size="24.0" />
            </font>
        </Label>
        <Label layoutX="337.0" layoutY="160.0" text="Sign in to continue" textFill="#9a9a9a">
            <font>
                <Font size="14.0" />
            </font>
        </Label>
        <Label layoutX="154.0" layoutY="180.0" text="Username:" textFill="#e78645">
            <font>
                <Font name="System Bold" size="14.0" />
            </font>
        </Label>
        <TextField fx:id="usernameField" layoutX="152.0" layoutY="208.0" prefHeight="25.0" prefWidth="291.0" promptText="Username" style="-fx-background-radius: 10px;" />
