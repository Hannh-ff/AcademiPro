<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="600" prefWidth="900" spacing="15" stylesheets="@../../css/thao.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.center.academipro.controller.teacher.AttendanceHistoryController">

    <padding>
        <Insets bottom="15" left="15" right="15" top="15" />
    </padding>

    <Label alignment="CENTER" contentDisplay="CENTER" styleClass="main-text" text="Attendance History">
        <font>
            <Font name="System Bold" size="20" />
        </font>
    </Label>

    <HBox alignment="CENTER" spacing="10">
        <Label prefHeight="20.0" prefWidth="66.0" text="Class:">
         <font>
            <Font name="System Bold" size="14.0" />
         </font></Label>
        <ComboBox fx:id="classCombox" prefWidth="200" />

        <Label prefHeight="20.0" prefWidth="64.0" text="From:">
         <font>
            <Font name="System Bold" size="14.0" />
         </font></Label>
        <DatePicker fx:id="fromDatePicker" prefWidth="150" />

        <Label prefHeight="20.0" prefWidth="46.0" text="To:">
         <font>
            <Font name="System Bold" size="14.0" />
         </font></Label>
        <DatePicker fx:id="toDatePicker" prefWidth="150" />

        <Label prefHeight="20.0" prefWidth="68.0" text="Status:">
         <font>
            <Font name="System Bold" size="14.0" />
         </font></Label>
        <ComboBox fx:id="statusFilterComboBox" prefWidth="100" />

        <Button fx:id="viewButton" styleClass="btn-update" text="View" />
    </HBox>

    <TableView fx:id="attendanceTableView" prefHeight="400">
        <columns>
            <TableColumn fx:id="dateColumn" prefWidth="120" text="Date" />
            <TableColumn fx:id="studentCodeColumn" prefWidth="100" text="Student ID" />
            <TableColumn fx:id="studentNameColumn" prefWidth="250" text="Student Name" />
            <TableColumn fx:id="statusColumn" prefWidth="100" text="Status" />
            <TableColumn fx:id="notesColumn" prefWidth="300" text="Notes" />
        </columns>
    </TableView>

    <HBox alignment="CENTER_RIGHT" spacing="10">
        <Label fx:id="statusLabel" text="Ready" />
        <Button fx:id="exportButton" prefHeight="40.0" prefWidth="131.0" styleClass="btn-add" text="Export to Excel" />
    </HBox>
</VBox>
