<?xml version="1.0" encoding="UTF-8"?>

        <?import javafx.geometry.Insets?>
        <?import javafx.scene.control.*?>
        <?import javafx.scene.layout.*?>
        <?import javafx.scene.text.Font?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.center.academipro.controller.teacher.AttendanceController"
      spacing="15" prefHeight="600" prefWidth="900" stylesheets="@../../css/thao.css">

    <padding>
        <Insets top="15" right="15" bottom="15" left="15"/>
    </padding>

    <Label text="Attendance Management">
        <font>
            <Font name="System Bold" size="20"/>
        </font>
    </Label>

    <HBox spacing="10" alignment="CENTER_LEFT">
        <Label text="Class:"/>
        <ComboBox fx:id="classCombox" prefWidth="200"/>
        <Label text="Date:"/>
        <DatePicker fx:id="datePicker" prefWidth="150"/>
<!--        <Button fx:id="refreshButton" text="Refresh" onAction="#refreshData"/>-->
    </HBox>

    <TableView fx:id="studentTableView" prefHeight="400">
        <columns>
            <TableColumn fx:id="studentCodeColumn" text="Student ID" prefWidth="100"/>
            <TableColumn fx:id="studentNameColumn" text="Student Name" prefWidth="250"/>
            <TableColumn fx:id="presentColumn" text="Present" prefWidth="80"/>
            <TableColumn fx:id="absentColumn" text="Absent" prefWidth="80"/>
            <TableColumn fx:id="lateColumn" text="Late" prefWidth="80"/>
            <TableColumn fx:id="excusedColumn" text="Excused" prefWidth="80"/>
            <TableColumn fx:id="notesColumn" text="Notes" prefWidth="200"/>
        </columns>
    </TableView>

    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Label fx:id="statusLabel" style="-fx-text-fill: red; -fx-padding: 5 0 5 0;"/>
        <Button fx:id="saveButton" text="Save Attendance"/>
    </HBox>

</VBox>