<AnchorPane prefHeight="600.0" prefWidth="1000.0" stylesheets="@../../css/thao.css"
            xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.center.academipro.controller.teacher.AssignmentController">
   <children>
      <VBox layoutX="77.0" layoutY="89.0" prefHeight="600.0" prefWidth="1000.0"
            AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
            AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <AnchorPane prefHeight="67.0" prefWidth="1000.0">
               <children>
                  <HBox alignment="CENTER" layoutX="178.0" layoutY="-16.0"
                        prefHeight="77.0" prefWidth="1000.0"
                        AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
                        AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                     <children>
                        <Label alignment="TOP_LEFT" styleClass="main-text" text="Assign assignments">
                           <font>
                              <Font name="System Bold" size="20.0" />
                           </font>
