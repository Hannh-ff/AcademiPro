                              AnchorPane.leftAnchor="70.0" AnchorPane.rightAnchor="70.0"
                              AnchorPane.topAnchor="32.0">
                     <styleClass>
                        <String fx:value="white-bg" />
                        <String fx:value="shadow" />
                        <String fx:value="radius" />
                     </styleClass>
                     <children>
                        <!-- Title Section -->
                        <Label layoutX="51.0" layoutY="46.0" prefHeight="25.0"
