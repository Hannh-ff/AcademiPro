                        <!-- Class Section - ĐÃ SỬA VỊ TRÍ -->
                        <Label layoutX="51.0" layoutY="215.0" prefHeight="25.0"
                               prefWidth="146.0" styleClass="extra-text" text="Class :">
                           <font>
                              <Font name="System Bold" size="16.0" />
                           </font>
                        </Label>
                        <ComboBox fx:id="classCombox" layoutX="71.0" layoutY="254.0"
                                  prefHeight="38.0" prefWidth="252.0"
                                  AnchorPane.leftAnchor="70.0" AnchorPane.topAnchor="254.0"/>

                        <!-- Question Section -->
                        <Label layoutX="403.0" layoutY="45.0" prefHeight="25.0"
                               prefWidth="146.0" styleClass="extra-text"
                               text="Write question :" AnchorPane.rightAnchor="311.0">
                           <font>
                              <Font name="System Bold" size="16.0" />
                           </font>
                        </Label>
                        <TextArea fx:id="description" layoutX="468.0" layoutY="94.0"
                                  prefHeight="248.0" prefWidth="386.0"
                                  styleClass="radius-textField"
                                  AnchorPane.bottomAnchor="28.0" AnchorPane.rightAnchor="35.0"
                                  AnchorPane.topAnchor="98.0" />

                        <!-- Clear Button -->
                        <Button layoutX="51.0" layoutY="320.0" mnemonicParsing="false"
                                prefHeight="38.0" prefWidth="78.0" styleClass="btn-clear"
                                text="Clear" AnchorPane.bottomAnchor="28.0"
                                AnchorPane.leftAnchor="51.0" />
                     </children>
                  </AnchorPane>
               </children>
            </AnchorPane>

            <!-- Footer Buttons -->
            <AnchorPane prefHeight="77.0" prefWidth="1000.0">
               <children>
                  <Button fx:id="addButton" layoutX="804.0" layoutY="16.0"
                          mnemonicParsing="false" prefHeight="45.0" prefWidth="125.0"
                          styleClass="btn-add" text="Add exercises"
                          onAction="#handleAddAssignment" AnchorPane.rightAnchor="70.0" />
                  <Button layoutX="664.0" layoutY="16.0" mnemonicParsing="false"
                          prefHeight="45.0" prefWidth="91.0" styleClass="btn-delete"
                          text="Back" AnchorPane.rightAnchor="245.0" />
               </children>
            </AnchorPane>
         </children>
      </VBox>
   </children>
