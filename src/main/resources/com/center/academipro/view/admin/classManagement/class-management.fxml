<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import java.lang.String?>

<AnchorPane prefHeight="600.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.center.academipro.controller.admin.classManagement.ClassController">

    <children>
        <Label layoutX="38.0" layoutY="14.0" text="Class Management">
            <font>
                <Font name="System Bold" size="18.0"/>
            </font>
        </Label>

        <AnchorPane layoutX="30.0" layoutY="56.0" prefHeight="49.0" prefWidth="837.0"
                    stylesheets="@../../../css/thao.css"
                    AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0">
            <styleClass>
                <String fx:value="shadow"/>
                <String fx:value="white-bg"/>
                <String fx:value="radius"/>
            </styleClass>

            <children>
                <TextField layoutX="28.0" layoutY="4.0" prefHeight="41.0" prefWidth="281.0" promptText="Search class..."/>
                <Button onAction="#addClass" layoutX="746.0" layoutY="9.0" mnemonicParsing="false"
                        prefHeight="31.0" prefWidth="74.0" styleClass="btn-add" text="Add" AnchorPane.rightAnchor="22.0"/>
                <Button onAction="#reloadClassTable" layoutX="643.0" layoutY="9.0" mnemonicParsing="false"
                        prefHeight="31.0" prefWidth="74.0" text="Reload" AnchorPane.rightAnchor="125.0"/>
            </children>
        </AnchorPane>

        <AnchorPane layoutX="20.0" layoutY="135.0" prefHeight="409.0" prefWidth="842.0"
                    stylesheets="@../../../css/thao.css"
                    AnchorPane.topAnchor="135.0" AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0">
            <styleClass>
                <String fx:value="radius"/>
                <String fx:value="white-bg"/>
                <String fx:value="shadow"/>
            </styleClass>

            <children>
                <AnchorPane layoutX="28.0" layoutY="24.0" prefHeight="349.0" prefWidth="795.0"
                            AnchorPane.topAnchor="20.0" AnchorPane.bottomAnchor="20.0"
                            AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0">
                    <children>
                        <TableView fx:id="tableClass" AnchorPane.topAnchor="0.0" AnchorPane.bottomAnchor="0.0"
                                   AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
                            <columns>
                                <TableColumn fx:id="colClassId" text="ID" prefWidth="50.0"/>
                                <TableColumn fx:id="colClassName" text="Class Name" prefWidth="120.0"/>
                                <TableColumn fx:id="colDescription" text="Description" prefWidth="180.0"/>
                                <TableColumn fx:id="colImage" text="Teacher" prefWidth="150.0"/>
                                <TableColumn fx:id="colPrice" text="Student" prefWidth="80.0"/>
                                <TableColumn fx:id="colAction" text="Actions" prefWidth="120.0"/>
                            </columns>
                        </TableView>

                    </children>
                </AnchorPane>
            </children>
        </AnchorPane>
    </children>
</AnchorPane>
