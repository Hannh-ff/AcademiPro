<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" stylesheets="@../../../css/thao.css"
            xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.center.academipro.controller.admin.courseManagement.AddCourseController">

    <children>
        <Button fx:id="btnImportImage" layoutX="25.0" layoutY="186.0" mnemonicParsing="false" onAction="#importImage"
                prefHeight="28.0" prefWidth="161.0" styleClass="btn" text="Import"/>

        <AnchorPane layoutX="25.0" layoutY="27.0" prefHeight="131.0" prefWidth="161.0">
            <children>
                <ImageView fx:id="imagePreview" fitHeight="160.0" fitWidth="161.0" pickOnBounds="true"
                           preserveRatio="true" styleClass="radius"/>
            </children>
        </AnchorPane>

        <Label layoutX="228.0" layoutY="33.0" text="Course Name:">
            <font>
                <Font name="System Bold" size="18.0"/>
            </font>
        </Label>
        <TextField fx:id="txtCourseName" layoutX="254.0" layoutY="68.0" prefHeight="36.0" prefWidth="302.0"
                   promptText="Course name">
            <font>
                <Font size="14.0"/>
            </font>
        </TextField>

        <!-- Price -->
        <Label layoutX="228.0" layoutY="121.0" text="Price:">
            <font>
                <Font name="System Bold" size="18.0"/>
            </font>
        </Label>
        <TextField fx:id="txtPrice" layoutX="254.0" layoutY="156.0" prefHeight="36.0" prefWidth="302.0"
                   promptText="Price">
            <font>
                <Font size="14.0"/>
            </font>
        </TextField>

        <!-- Description -->
        <Label layoutX="25.0" layoutY="222.0" text="Description:">
            <font>
                <Font name="System Bold" size="18.0"/>
            </font>
        </Label>
        <TextArea fx:id="txtDescription" layoutX="25.0" layoutY="256.0" prefHeight="127.0" prefWidth="357.0"
                  promptText="Description">
            <font>
                <Font size="14.0"/>
            </font>
        </TextArea>

        <Button fx:id="btnAdd" layoutX="405.0" layoutY="268.0" mnemonicParsing="false" onAction="#addCourse"
                prefHeight="44.0" prefWidth="74.0" styleClass="btn-add" text="Add"/>

        <Button fx:id="btnClear" layoutX="495.0" layoutY="268.0" mnemonicParsing="false" onAction="#clearForm"
                prefHeight="44.0" prefWidth="74.0" styleClass="btn-add btn-clear" text="Clear"/>
        <Button fx:id="btnCancel" layoutX="408.0" layoutY="334.0" mnemonicParsing="false" onAction="#handleCancel"
                prefHeight="37.0" prefWidth="161.0" styleClass="btn-delete" text="Cancel"/>

        <TextField fx:id="txtImage" layoutX="200.0" layoutY="190.0" prefWidth="356.0" promptText="Image path"
                   visible="false"/>
    </children>
</AnchorPane>
